@model IEnumerable<Flower>

@{
	ViewData["Title"] = "Quản trị viên";
}

<div class="row">
	<div class="col-sm-4">
		<strong>Danh sách các loài hoa có thể phân loại:</strong>
		<br />
		<br />
		<div class="list-group" id="listFlowers">
			@foreach (var flower in Model)
			{
				<button type="button" class="list-group-item list-group-item-action" id="@flower.ID" onclick="getItemById(@flower.ID)">@flower.VietnameseName</button>
			}
		</div>
	</div>
	<div class="col-sm-8">
		<strong>Công cụ chỉnh sửa nội dung:</strong>
		<br />
		<br />
		<form>
			<div class="form-group row">
				<label for="tbxEnglishName" class="col-sm-3 col-form-label">Tên tiếng Anh:</label>
				<div class="col-sm-9">
					<input type="text" readonly class="form-control-plaintext" id="tbxEnglishName" value="">
				</div>
			</div>
			<div class="form-group row">
				<label for="tbxVietnameseName" class="col-sm-3 col-form-label">Tên tiếng Việt:</label>
				<div class="col-sm-9">
					<input type="text" readonly class="form-control-plaintext" id="tbxVietnameseName" value="">
				</div>
			</div>
			<div class="form-group">
				<label for="imgThumbnail" class="col-form-label">Hình đại diện:</label>
				<img id="imgThumbnail" src=""/>
			</div>
			<div class="form-group">
				<label for="rtbInfo" class="col-form-label">Thông tin mô tả:</label>
				<div id="rtbInfo"></div>
			</div>
			<div class="row">
				<div id="formButton">
					<input type="submit" value="Xác nhận" name="submit" class="btn btn-primary" />
				</div>
			</div>
		</form>
	</div>
</div>

@section scripts{
	<script src="~/js/ckeditor.js" type="text/javascript" asp-append-version="true"></script>
	<script>
		ClassicEditor
			.create(document.querySelector('#rtbInfo'), {
				// toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
			})
			.then(editor => {
				window.editor = editor;
			})
			.catch(err => {
				console.error(err.stack);
			});
	</script>
	<script src="~/js/admin.js" type="text/javascript" asp-append-version="true"></script>
}