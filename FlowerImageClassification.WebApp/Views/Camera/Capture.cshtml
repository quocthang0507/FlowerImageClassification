
@{
	ViewData["Title"] = "Capture";
}
<div class="text-center">
	<h1 class="display-4">Chào mừng</h1>
	<h2 class="headerDiv">Ứng dụng nhận diện loài hoa trực tuyến, sử dụng thư viện ML.NET, dựa trên TensorFlow</h2>
	<p>Tìm hiểu thêm về <a href="https://docs.microsoft.com/en-us/dotnet/machine-learning/">thư viện ML.NET</a> của Microsoft.</p>
</div>
<br />
<div>
	<form method="post" enctype="multipart/form-data">
		<div class="row">
			<div class="col-sm">
				<div class="card">
					<div class="card-header">Camera</div>
					<div class="card-body">
						<div id="my_camera"></div>
						<div id="formButton">
							<input type="button" class="btn btn-success btnCapture" value="Chụp hình" onclick="takeSnapshot()" />
						</div>
					</div>
				</div>
			</div>
			<div class="col-sm">
				<div class="card">
					<div class="card-header">Ảnh chụp</div>
					<div class="card-body">
						<div id="webcamPreview">Ảnh chụp của bạn sẽ xuất hiện tại đây...</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div id="formButton">
				<input type="submit" value="Gửi hình" name="submit" class="btn btn-primary" />
			</div>
		</div>
	</form>
</div>
<br />
<br />
<div class="row">
	<div class="col-sm" id="divResult_left">
		<div class="card">
			<div class="card-header">Xem trước</div>
			<div class="card-body">
				<div id="divImagePreview"></div>
			</div>
		</div>
	</div>
	<div class="col-sm" id="divResult_right">
		<div class="card">
			<div class="card-header">Kết quả</div>
			<div class="card-body">
				<div id="divImageId" class="col-md-10"></div>
				<div id="divPrediction" class="col-md-10"></div>
				<div id="divProbability" class="col-md-10"></div>
				<div id="divExecutionTime" class="col-md-10"></div>
			</div>
		</div>
	</div>
</div>
