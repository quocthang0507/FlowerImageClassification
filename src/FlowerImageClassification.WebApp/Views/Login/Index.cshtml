@model LoginModel
@{
	ViewBag.Title = "Đăng nhập";
}
<div class="login-form">
	@using (Html.BeginForm("Login", "Login", FormMethod.Post))
	{
		<fieldset>
			<h2 class="text-center">Đăng nhập</h2>
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			@if (@ViewBag.Message != null)
			{
				<div style="border: 1px solid red">
					@ViewBag.Message
				</div>
			}
			<div class="form-group">
				@Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Tên đăng nhập", required = "required" })
				@Html.ValidationMessageFor(x => x.Username)
			</div>
			<div class="form-group">
				@Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Mật khẩu", required = "required" })
				@Html.ValidationMessageFor(x => x.Password)
			</div>
			<div class="form-group">
				<input type="submit" value="Đăng nhập" class="btn btn-primary btn-block" />
			</div>
		</fieldset>
	}
</div>